{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "client_side.c",
                "http.c",
                "net.c",
                "ssl_conn.c",
                "log.c",
                "config_parser.c",
                "sc_mem_pool.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I./",
                "-lcrypto",
                "-lssl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}